<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/pref_header_features"
        app:key="feature_settings">

        <SwitchPreferenceCompat
            app:key="enableDailyAverage"
            app:defaultValue="true"
            app:title="@string/enable_daily_average"
            app:summary="@string/enable_daily_average_median_s"/>

        <SwitchPreferenceCompat
            app:key="enableDailyMedian"
            app:defaultValue="false"
            app:title="@string/enable_daily_median"
            app:summary="@string/enable_daily_average_median_s"/>

        <Preference
            app:key="manageAutoCorrection"
            app:title="@string/manage_auto_correction_t"
            app:summary="@string/manage_auto_correction_s"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_sync"
        app:key="sync_settings" >

        <EditTextPreference
            app:key="syncCycle"
            app:title="@string/sync_cycle"
            app:dialogTitle="@string/sync_cycle_t"
            app:defaultValue="30"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="syncCycleBackground"
            app:title="@string/sync_cycle_background"
            app:dialogTitle="@string/sync_cycle_background_t"
            app:defaultValue="15"
            app:useSimpleSummaryProvider="true"/>

        <SwitchPreferenceCompat
            app:key="reduceDataConsumption"
            app:defaultValue="true"
            app:title="@string/reduce_data_consumption"
            app:summary="@string/reduce_data_consumption_s"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_appearance"
        app:key="appearance_settings">

        <ListPreference
            app:key="defaultMapType"
            app:defaultValue="0"
            android:title="@string/default_map_type"
            android:entries="@array/map_type"
            android:entryValues="@array/map_type_values"
            app:useSimpleSummaryProvider="true"/>

        <SwitchPreferenceCompat
            app:key="defaultTraffic"
            android:title="@string/enable_traffic_by_default"
            app:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_notifications"
        app:key="notification_settings" >

        <SwitchPreferenceCompat
            app:key="notificationThreshold"
            app:defaultValue="true"
            app:title="@string/pref_enable_threshold_notifications"/>

        <SwitchPreferenceCompat
            app:key="notificationAverages"
            app:defaultValue="true"
            app:title="@string/pref_notification_averages"
            app:summaryOn="@string/pref_notification_averages_s_true"
            app:summaryOff="@string/pref_notification_averages_s_false"
            app:dependency="notification_threshold"/>

        <SwitchPreferenceCompat
            app:key="notificationBreakdown"
            app:defaultValue="true"
            app:title="@string/pref_notification_breakdown"
            app:summary="@string/pref_notification_breakdown_s"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_performance"
        app:key="performance_settings" >

        <SwitchPreferenceCompat
            app:key="enableMarkerClustering"
            app:defaultValue="true"
            app:title="@string/pref_enable_marker_clustering"
            app:summary="@string/pref_enable_marker_clustering_s"/>

        <SwitchPreferenceCompat
            app:key="increaseDiagramPerformance"
            app:defaultValue="false"
            app:title="@string/pref_increase_diagram_performance"
            app:summary="@string/pref_increase_diagram_performance_s"/>

        <Preference
            app:key="clearSensorData"
            app:title="@string/clear_sensor_data_t"
            app:summary="@string/clear_sensor_data_m" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_header_about"
        app:key="about_settings" >

        <Preference
            app:key="openSource"
            app:title="@string/pref_app_open_source_t"
            app:summary="@string/pref_app_open_source_s"/>

        <Preference
            app:key="openSourceLicenses"
            app:title="@string/pref_open_source_t"
            app:summary="@string/pref_open_source_m"/>

        <Preference
            app:key="appVersion"
            app:title="@string/pref_appversion"/>

        <Preference
            app:key="developers"
            app:title="@string/pref_developers_t"
            app:summary="@string/chillibits"/>

        <Preference
            app:key="moreApps"
            app:title="@string/pref_more_apps_t"
            app:summary="@string/pref_more_apps_s"/>
    </PreferenceCategory>
</PreferenceScreen>