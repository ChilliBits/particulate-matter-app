<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/cv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/current_values"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_margin="3dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/cv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="1dp"
        android:layout_below="@+id/cv_title"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_selection"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="@string/value1"/>

            <TextView
                android:id="@+id/cv_p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@color/current_values_color"
                android:text="@string/loading"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/value2"
                android:padding="5dp"
                android:background="@color/current_values_color"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/cv_p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@color/color_selection"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                android:layout_weight="1"
                android:background="@color/color_selection"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/cv_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:padding="5dp"
                android:background="@color/current_values_color"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/humidity"
                android:padding="5dp"
                android:background="@color/current_values_color"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/cv_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@color/color_selection"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pressure"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@color/color_selection"/>

            <TextView
                android:id="@+id/cv_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:padding="5dp"
                android:background="@color/current_values_color"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/cv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/cv_container"
            android:textColor="@color/white"
            android:padding="5dp"/>
    </LinearLayout>

