<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    tools:context=".ui.activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/toolbar" />

        <com.miguelcatalan.materialsearchview.MaterialSearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            android:hint="@string/search_for_sensors"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarContainer"
        app:layout_constraintBottom_toTopOf="@+id/tabBar"
        android:nestedScrollingEnabled="true" />

    <com.fxn.BubbleTabBar
        android:id="@+id/tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorToolbar"
        app:bubbletab_menuResource="@menu/menu_main"
        app:bubbletab_disabled_icon_color="@color/colorPrimaryDark"
        android:padding="6dp"
        android:elevation="16dp"
        app:bubbletab_icon_size="22dp"
        app:bubbletab_title_size="16sp"
        app:bubbletab_vertical_padding="13dp"
        app:bubbletab_horizontal_padding="20dp"/>

    <!-- Add / search fab -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fab_anim_search_to_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tabBar"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        android:layout_marginBottom="10dp" />

    <com.github.fabtransitionactivity.SheetLayout
        android:id="@+id/fabSheetAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ft_color="@color/colorPrimary"
        android:elevation="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>