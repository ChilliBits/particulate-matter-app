<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AddSensorActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/lblSensorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_"
                android:textSize="17sp"
                android:labelFor="@+id/sensorName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/sensorName"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/sensorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblSensorName"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:maxLength="30"
                android:importantForAutofill="no"
                android:inputType="textCapSentences" />

            <TextView
                android:id="@+id/lblChipId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_id"
                android:textSize="17sp"
                app:layout_constraintTop_toTopOf="@+id/chipId"
                app:layout_constraintBottom_toBottomOf="@+id/chipId"
                app:layout_constraintStart_toStartOf="parent"
                android:labelFor="@+id/chipId"/>

            <EditText
                android:id="@+id/chipId"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/sensorName"
                app:layout_constraintTop_toBottomOf="@+id/sensorName"
                android:importantForAutofill="no"
                android:maxLength="12"
                android:inputType="number" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/chipIdInfo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toEndOf="@+id/chipId"
                app:layout_constraintTop_toTopOf="@+id/chipId"
                app:layout_constraintBottom_toBottomOf="@+id/chipId"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                app:srcCompat="@drawable/info_outline_black"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:tint="@color/colorButton"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sensorColorPreview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chipId"
                app:srcCompat="@drawable/simple_circle"
                android:elevation="10dp"
                android:contentDescription="@string/choose_color"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <Button
                android:id="@+id/selectSensorColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/sensorColorPreview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chipId"
                android:layout_marginStart="10dp"
                android:background="@drawable/button_outline_rounded"
                android:text="@string/choose_color"
                android:textColor="@drawable/button_outline_text"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/indoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/selectSensorColor"
                android:layout_marginTop="15dp"
                android:text="@string/indoor_sensor"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/publishSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/indoor"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="@string/public_sensor"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sensorPositionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/publishSensor">

                <Button
                    android:id="@+id/selectSensorPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/button_outline_rounded_background_white"
                    android:text="@string/choose_location"
                    android:textColor="@drawable/button_outline_text" />

                <TextView
                    android:id="@+id/addressPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/loading"
                    android:textColor="@color/white"
                    android:layout_marginBottom="1dp"
                    android:textSize="12sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lblHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/height"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/height"
                android:text="@string/sensor_height"
                android:labelFor="@+id/height"/>

            <EditText
                android:id="@+id/height"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensorPositionContainer"
                app:layout_constraintStart_toEndOf="@+id/lblHeight"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="5"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/publishExactPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/height"
                android:layout_marginTop="10dp"
                android:text="@string/publish_exact_position"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>