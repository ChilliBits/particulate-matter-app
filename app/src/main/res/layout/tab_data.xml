                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/heading_gps"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3.03"
                    android:weightSum="3.03"
                    android:visibility="gone">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.01"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/latitude"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.01"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/longitude"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.01"
                        android:background="@color/gray_light"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/altitude"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/data"
                android:layout_width="530dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/data_heading"
                android:layout_above="@+id/data_footer"/>

            <RelativeLayout
                android:id="@+id/data_footer"
                android:layout_width="530dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/data_footer_average"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/color_selection">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Ã" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.01"
                        android:background="@color/gray_light"/>

                    <TextView
