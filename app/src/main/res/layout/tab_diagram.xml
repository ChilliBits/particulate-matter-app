<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_data"
            android:layout_below="@+id/loading_progress"
            android:layout_marginTop="7dp"
            android:textSize="17sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_date"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_centerInParent="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/diagram_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/diagram"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:id="@+id/checkbox_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@+id/diagram">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/custom_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/value1"
                        android:buttonTint="@color/series1"/>

                    <CheckBox
                        android:id="@+id/custom_p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/value2"
                        android:layout_below="@+id/custom_p1"
                        android:buttonTint="@color/series2"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/custom_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/temperature"
                        android:buttonTint="@color/series3"/>

                    <CheckBox
                        android:id="@+id/custom_humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/humidity"
                        android:layout_below="@+id/custom_temp"
                        android:buttonTint="@color/series4"/>

                    <CheckBox
                        android:id="@+id/custom_pressure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure"
                        android:layout_below="@+id/custom_humidity"
                        android:buttonTint="@color/series5"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/lbl_curve_smoothness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/curve_smoothness_"
                android:layout_below="@+id/checkbox_container"
                android:layout_marginTop="10dp"/>

            <SeekBar
                android:id="@+id/curve_smoothness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_curve_smoothness"
                android:progress="500"
                android:max="500" />

            <RadioGroup
                android:id="@+id/enable_average_median"
                android:layout_below="@+id/curve_smoothness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/enable_nothing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_nothing"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/enable_average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_daily_average"/>

                <RadioButton
                    android:id="@+id/enable_median"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_daily_median"/>
            </RadioGroup>

            <TextView
                android:id="@+id/title_current_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_values"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@+id/enable_average_median"
                android:gravity="center"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/cv_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="1dp"
                android:layout_below="@+id/title_current_values"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_selection"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="@string/value1"/>

                    <TextView
                        android:id="@+id/cv_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@color/current_values_color"
                        android:text="@string/loading"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/value2"
                        android:padding="5dp"
                        android:background="@color/current_values_color"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/cv_p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@color/color_selection"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/temperature"
                        android:layout_weight="1"
                        android:background="@color/color_selection"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/cv_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:padding="5dp"
                        android:background="@color/current_values_color"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/humidity"
                        android:padding="5dp"
                        android:background="@color/current_values_color"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/cv_humidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@color/color_selection"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@color/color_selection"/>

                    <TextView
                        android:id="@+id/cv_pressure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:padding="5dp"
                        android:background="@color/current_values_color"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/cv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/cv_container"
                    android:textColor="@color/white"
                    android:padding="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>