<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="185dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:tint="@color/colorButton"
        app:layout_constraintBottom_toBottomOf="@+id/itemVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemName"
        app:srcCompat="@drawable/sensor_white" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/loading"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/itemIpMac"
        app:layout_constraintStart_toEndOf="@+id/itemIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemIpMac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:textSize="13sp"
        android:maxLines="1"
        android:text="@string/ip_mac"
        app:layout_constraintEnd_toStartOf="@+id/itemWarning"
        app:layout_constraintStart_toEndOf="@+id/itemIcon"
        app:layout_constraintTop_toBottomOf="@+id/itemName" />

    <TextView
        android:id="@+id/itemVersion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:textSize="13sp"
        android:maxLines="1"
        android:text="@string/loading"
        app:layout_constraintEnd_toEndOf="@+id/itemIpMac"
        app:layout_constraintStart_toEndOf="@+id/itemIcon"
        app:layout_constraintTop_toBottomOf="@+id/itemIpMac" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemWarning"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/itemVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemName"
        app:srcCompat="@drawable/warning_orange"/>

    <Button
        android:id="@+id/itemButtonOpenConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/itemVersion"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/open_sensor_config"
        android:background="@drawable/button_outline_rounded"
        android:textColor="@drawable/button_outline_text"/>

    <Button
        android:id="@+id/itemButtonShowData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/itemButtonOpenConfig"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/show_measurements"
        android:background="@drawable/button_outline_rounded"
        android:textColor="@drawable/button_outline_text"
        android:visibility="gone"/>

    <Button
        android:id="@+id/itemButtonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/itemButtonOpenConfig"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/add_to_own_sensors"
        android:background="@drawable/button_outline_rounded"
        android:textColor="@drawable/button_outline_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>