<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/success_image_container"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/simple_circle"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:backgroundTint="#4CAF50"
            android:elevation="5dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/done_white"
                android:elevation="10dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/successfully_connected"
            android:layout_below="@+id/success_image_container"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</RelativeLayout>