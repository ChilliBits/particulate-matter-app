<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/export_diagram_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value1"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/export_diagram_p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value2" />

        <RadioButton
            android:id="@+id/export_diagram_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temperature" />

        <RadioButton
            android:id="@+id/export_diagram_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/humidity" />

        <RadioButton
            android:id="@+id/export_diagram_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pressure" />
    </RadioGroup>
</RelativeLayout>