<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorButtonGray">
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="@color/colorMapControls"/>
            <corners android:radius="3dp"/>
            <stroke android:color="@color/colorPrimary"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/colorMapControls"/>
                    <corners android:radius="3dp"/>
                    <stroke android:color="@color/colorPrimary"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/colorMapControls"/>
                    <corners android:radius="3dp"/>
                    <stroke android:color="@color/colorPrimary"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>